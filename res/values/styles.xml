<resources>

    <style name="AppBaseThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseThemeLight">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="settings_item_header" >
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="settings_item_cardview">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">4dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
    </style>
</resources>