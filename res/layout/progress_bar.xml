<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_reading_page_loader_indicator_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/shadow" >

    <TextView
        android:id="@+id/activity_reading_page_loader_indicator_textview_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/activity_reading_page_loader_indicator_btn_cancel"
        android:layout_toStartOf="@+id/activity_reading_page_loader_indicator_btn_cancel" >
    </TextView>

    <ProgressBar
        android:id="@+id/activity_reading_page_loader_indicator_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/activity_reading_page_loader_indicator_btn_cancel"
        android:layout_toStartOf="@+id/activity_reading_page_loader_indicator_btn_cancel" />

    <ImageView
        android:id="@+id/activity_reading_page_loader_indicator_btn_cancel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@string/cancel_current_progress"
        android:focusable="true"
        android:src="@drawable/ic_btn_close" android:padding="8dp"/>

</RelativeLayout>