<?xml version="1.0" encoding="utf-8"?>
<ndphu.app.android.cw.customview.ChapterNavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cv_chapter_navigation_bar_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cv_page_navigation_prev"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@string/go_to_the_previous_chapter"
        android:focusable="true"
        android:src="@drawable/ic_action_prev" />

    <ImageView
        android:id="@+id/cv_page_navigation_next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@string/go_to_the_next_chapter"
        android:focusable="true"
        android:src="@drawable/ic_action_next" />

</ndphu.app.android.cw.customview.ChapterNavigationBar>