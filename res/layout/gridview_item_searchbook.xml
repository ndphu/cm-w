<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gridview_item_search_book_item_cover"
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:layout_margin="@dimen/online_book_search_item_containers_margin"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccdddddd" >
    </LinearLayout>

    <TextView
        android:id="@+id/gridview_item_search_book_item_book_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:maxLines="3"
        android:padding="2dp"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gridview_item_search_book_item_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:maxLines="2"
        android:padding="2dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:visibility="gone" />

</LinearLayout>