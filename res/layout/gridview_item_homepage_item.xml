<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    android:foreground="@drawable/listview_selectable_foreground"    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gridview_item_homepage_item_cover"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_margin="@dimen/online_book_search_item_containers_margin"
            android:contentDescription="@string/app_name"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/gridview_item_homepage_item_book_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/gridview_item_homepage_item_imageview_menu"
                android:layout_toStartOf="@+id/gridview_item_homepage_item_imageview_menu"
                android:lines="2"
                android:maxLines="2"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/book_name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/gridview_item_homepage_item_imageview_menu"
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:contentDescription="@string/more"
                android:focusable="false"
                android:padding="4dp"
                android:src="@drawable/ic_action_over_flow" />

            <ImageView
                android:id="@+id/gridview_item_homepage_item_imageview_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/gridview_item_homepage_item_imageview_menu"
                android:contentDescription="@string/more"
                android:padding="4dp"
                android:src="@drawable/ic_not_favorite" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>